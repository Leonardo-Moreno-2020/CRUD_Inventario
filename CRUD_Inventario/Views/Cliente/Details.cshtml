@model CRUD_Inventario.Models.cliente

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles</h2>

<div>
    <h4>cliente</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre cliente
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
