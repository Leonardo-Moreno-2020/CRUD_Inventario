@model IEnumerable<CRUD_Inventario.Models.Reporte>
@{
    ViewBag.Title = "Reporte";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reporte</h2>

<table class="table">
    <tr>
        <th>Proveedor</th>
        <th>Telefono Proveedor</th>
        <th>Direccion Proveedor</th>
        <th>Producto</th>
        <th>Producto Precio</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.nombreProveedor)</td>
            <td>@Html.DisplayFor(modelItem => item.telefonoProveedor)</td>
            <td>@Html.DisplayFor(modelItem => item.direccionProveedor)</td>
            <td>@Html.DisplayFor(modelItem => item.nombreProducto)</td>
            <td>@Html.DisplayFor(modelItem => item.precioProducto)</td>
        </tr>
    }
</table>

<img src="https://img.vixdata.io/pd/jpg-large/es/sites/default/files/b/brazo_de_bucky_en_the_falcon_and_the_winter_soldier.jpg" alt="Alternate Text" />
<p>Productos de computacion y las mejores partes para tu pc laptop y gamer, envios a todo el pais.</p>

@Html.ActionLink("Generar Reporte", "ImprimirReporte", "Producto");
