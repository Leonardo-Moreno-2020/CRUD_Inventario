@model IEnumerable<CRUD_Inventario.Models.producto_imagen>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Imagen</h2>

<p>
    @Html.ActionLink("Nueva imagen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Imagen
        </th>
        <th>
            Producto
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.imagen)
            </td>
            <td>
                @CRUD_Inventario.Controllers.ProductoImagenController.NombreProducto(item.id_producto)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.id }, new { @class = "linkDelete" })

            </td>
        </tr>
    }

</table>


@section scripts{

    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿ Esta seguro de eliminar ?')) {
                event.preventDefault();
            }
        })
    </script>

}

